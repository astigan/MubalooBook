<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/min_view_padding"
    android:paddingBottom="@dimen/min_view_padding"
    android:paddingLeft="@dimen/default_view_padding"
    android:paddingRight="@dimen/default_view_padding"
    android:orientation="horizontal"
    android:background="@drawable/team_member_item_bg"
    xmlns:bootstrap="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_profile_pic"
        android:layout_width="@dimen/list_profile_pic_size"
        android:layout_height="@dimen/list_profile_pic_size"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/member_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/min_view_padding"
        android:layout_centerVertical="true"
        android:textColor="@color/dark_text"
        android:textSize="@dimen/secondary_text_size"
        android:layout_toRightOf="@+id/item_profile_pic" />

    <com.beardedhen.androidbootstrap.FontAwesomeText
        android:id="@+id/fa_team_lead_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/team_lead_icon_size"
        android:textColor="@color/dark_text"
        bootstrap:fa_icon="fa-user"
        bootstrap:bb_type="success"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" />

</RelativeLayout>